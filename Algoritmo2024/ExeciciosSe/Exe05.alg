algoritmo "Nome do Programa"
//escreva um algoritmo que receba um numero inteiro e exiba se ele é par ou impar
var
numero:inteiro


inicio
escreva("Digite um numero inteiro:")
leia(numero)

se numero %2 = 0 entao
escreva("O numero: " ,numero, " é par.")
senao
escreva("O numero: " ,numero, " é impar.")
fimse


fimalgoritmo